{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/DotnetGenerate/DotnetGenerate.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "type": "npm",
      "script": "watch",
      "options": {
        "cwd": "${workspaceFolder}/src/dotnet-generate-vscode/"
      },
      "problemMatcher": ["$ts-webpack-watch", "$tslint-webpack-watch"],
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "test-watch",
      "problemMatcher": "$tsc-watch",
      "options": {
        "cwd": "${workspaceFolder}/src/dotnet-generate-vscode/"
      },
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": "build"
    }
  ]
}
